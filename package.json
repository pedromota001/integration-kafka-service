{
  "name": "integration-service",
  "version": "1.0.0",
  "description": "Integration Service for Hospital Architecture - Microservice bridge between external systems and internal ecosystem",
  "author": "Pedro Mota",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose up --build",
    "docker:rebuild": "docker compose down -v && docker compose up --build",
    "docker:logs": "docker compose logs -f integration-service",
    "docker:logs:all": "docker compose logs -f",
    "docker:clean": "docker compose down -v --remove-orphans",
    "dev:up": "docker compose up --build",
    "dev:down": "docker compose down",
    "dev:restart": "docker compose restart integration-service",
    "dev:fresh": "docker compose down -v && docker compose up --build",
    "db:shell": "docker exec -it integration-service-infra-mongodb-1 mongosh",
    "kafka:consumer": "docker exec -it integration-service-infra-kafka-1 kafka-console-consumer --bootstrap-server localhost:9092 --topic lab.events --from-beginning",
    "test:mock:lab": "curl http://localhost:4001/send",
    "test:webhook:hl7": "curl -X POST http://localhost:3010/webhooks/hl7 -H 'Content-Type: text/plain' -d 'MSH|test'",
    "test:health": "curl http://localhost:3010/health",
    "topics:check": "ts-node src/scripts/check-topics.script.ts",
    "topics:create": "ts-node src/scripts/create-topics.script.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "axios": "^1.6.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.1.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "simple-hl7": "^3.1.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
